<!-- navbar goes here -->
<nav class="font-sans">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
            <div
                class="flex space-x-4">
                <!-- logo -->
                <div></div>
                <!-- primary nav -->
                <div class="hidden md:flex items-center space-x-1 text-2xl">
                    {% for item in navigation %}
                        <a class="py-5 px-3 navigation-item-link{% if item.url === page.url %} active{% endif %}" href="{{ item.url }}">
                            {{ item.title }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <!-- mobile button goes here -->
            <div class="md:hidden flex items-center pt-5">
                <button class="mobile-menu-button">
                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-2">{% include "theme-switcher.njk" %}</div>
        </div>
    </div>
    <!-- mobile menu -->
    <div class="mobile-menu hidden md:hidden">
        {% for item in navigation %}
            <a class="block py-2 px-4 text-sm navigation-item-link{% if item.url === page.url %} active{% endif %}" href="{{ item.url }}">
                {{ item.title }}
            </a>
        {% endfor %}
    </div>
</nav>